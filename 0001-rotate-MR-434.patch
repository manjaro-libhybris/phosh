+}
+
+void
+phosh_rotate_info_set_mode (PhoshRotateInfo *self, PhoshRotateInfoMode mode)
+{
+  PhoshRotationManager *rotation_manager;
+  PhoshShell *shell  = phosh_shell_get_default ();
+
+  g_return_if_fail (PHOSH_IS_ROTATE_INFO (self));
+
+  if (mode == self->mode)
+    return;
